<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeWidth="1dp"
    app:strokeColor="@color/surface_variant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Emoji with Yellow Background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/emojiCard"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFD54F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/moodEmoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="32sp"
                tools:text="ðŸ˜Š" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Mood Details -->
        <LinearLayout
            android:id="@+id/detailsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/emojiCard"
            app:layout_constraintBottom_toBottomOf="@+id/emojiCard"
            app:layout_constraintStart_toEndOf="@+id/emojiCard"
            app:layout_constraintEnd_toStartOf="@+id/timeText">

            <!-- Mood Type -->
            <TextView
                android:id="@+id/moodType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Very Happy" />

            <!-- Time Label (Today/Yesterday) -->
            <TextView
                android:id="@+id/moodTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                tools:text="Today" />

        </LinearLayout>

        <!-- Time Display -->
        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            tools:text="5:50 PM"
            app:layout_constraintTop_toTopOf="@+id/emojiCard"
            app:layout_constraintEnd_toStartOf="@+id/btnShare" />

        <!-- Share Button -->
        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_data"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Share"
            app:tint="@color/primary"
            app:layout_constraintTop_toTopOf="@+id/emojiCard"
            app:layout_constraintBottom_toBottomOf="@+id/emojiCard"
            app:layout_constraintEnd_toStartOf="@+id/btnDelete" />

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete"
            app:tint="@color/error"
            app:layout_constraintTop_toTopOf="@+id/emojiCard"
            app:layout_constraintBottom_toBottomOf="@+id/emojiCard"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Note (if exists) -->
        <TextView
            android:id="@+id/moodNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            android:background="@drawable/bg_note"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            tools:text="Feeling great today! Had a wonderful morning."
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/emojiCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
