<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:padding="2dp">

    <View
        android:id="@+id/dateContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:background="@drawable/bg_calendar_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="@+id/dateContainer"
        app:layout_constraintStart_toStartOf="@+id/dateContainer"
        app:layout_constraintEnd_toEndOf="@+id/dateContainer"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/moodEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/dateContainer"
        app:layout_constraintStart_toStartOf="@+id/dateContainer"
        app:layout_constraintEnd_toEndOf="@+id/dateContainer"
        android:layout_marginBottom="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
