<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme. -->
    <style name="Base.Theme.LifeLinePro" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Surface colors -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorSurfaceVariant">@color/dark_background</item>
        <item name="android:colorBackground">@color/dark_background</item>
        
        <!-- Text colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/dark_text_secondary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
